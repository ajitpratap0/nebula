{
    // Go language settings
    "go.gopath": "/go",
    "go.goroot": "/usr/local/go",
    "go.toolsManagement.checkForUpdates": "local",
    "go.useLanguageServer": true,
    "go.lintOnSave": "package",
    "go.vetOnSave": "package",
    "go.buildOnSave": "package",
    "go.testOnSave": false,
    "go.coverOnSave": false,
    "go.formatTool": "goimports",
    "go.lintTool": "golangci-lint",
    "go.testFlags": ["-v", "-race"],
    "go.buildFlags": ["-race"],
    "go.testTimeout": "30s",
    "go.coverageDecorator": {
        "type": "gutter",
        "coveredHighlightColor": "rgba(64,128,64,0.5)",
        "uncoveredHighlightColor": "rgba(128,64,64,0.25)",
        "coveredGutterStyle": "blockgreen",
        "uncoveredGutterStyle": "blockred"
    },

    // Editor settings
    "editor.formatOnSave": true,
    "editor.insertSpaces": false,
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.rulers": [80, 120],
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.minimap.enabled": true,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "never"
    },

    // File associations
    "files.associations": {
        "*.yml": "yaml",
        "*.yaml": "yaml",
        "Dockerfile*": "dockerfile",
        "*.mod": "go.mod",
        "*.sum": "go.sum",
        ".air.toml": "toml",
        "*.toml": "toml"
    },

    // File exclusions
    "files.exclude": {
        "**/tmp": true,
        "**/bin": true,
        "**/.git": true,
        "**/node_modules": true,
        "**/vendor": true,
        "**/*.log": true,
        "**/*.prof": true
    },

    // Search exclusions
    "search.exclude": {
        "**/tmp": true,
        "**/bin": true,
        "**/vendor": true,
        "**/node_modules": true,
        "**/*.log": true,
        "**/*.prof": true,
        "**/benchmark-results": true
    },

    // Git settings
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.defaultCloneDirectory": "/workspace",

    // Terminal settings
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "/bin/bash",
            "args": []
        }
    },
    "terminal.integrated.cwd": "/workspace",

    // Docker settings
    "docker.showStartPage": false,
    "docker.dockerPath": "docker",

    // YAML settings
    "yaml.schemas": {
        "https://json.schemastore.org/docker-compose.json": [
            "docker-compose*.yml",
            "docker-compose*.yaml"
        ],
        "https://json.schemastore.org/prometheus.json": [
            "prometheus.yml",
            "prometheus.yaml"
        ]
    },

    // Language specific settings
    "[go]": {
        "editor.insertSpaces": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced"
    },
    "[json]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 100,
        "editor.quickSuggestions": {
			"comments": "off",
			"strings": "off",
			"other": "off"
		}
    },

    // Breadcrumbs
    "breadcrumbs.enabled": true,
    "breadcrumbs.showFiles": true,
    "breadcrumbs.showModules": true,

    // Problem matcher
    "problems.showCurrentInStatus": true,

    // Testing
    "go.testExplorer.enable": true,
    "go.testExplorer.alwaysRunBenchmarks": false,

    // Code lens
    "go.enableCodeLens": {
        "references": true,
        "runtest": true
    },

    // Suggestions
    "editor.suggestSelection": "first",
    "editor.suggest.snippetsPreventQuickSuggestions": false,

    // IntelliSense
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    }
}